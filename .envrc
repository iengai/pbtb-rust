# .env first, then .env.local overwrite
if declare -F dotenv_if_exists >/dev/null 2>&1; then
  dotenv_if_exists .env
  dotenv_if_exists .env.local

elif declare -F dotenv >/dev/null 2>&1; then
  [ -f .env ] && dotenv .env
  [ -f .env.local ] && dotenv .env.local

else
  [ -f .env ] || [ -f .env.local ] || echo "[direnv] dotenv functions not found; skipped"
fi
